@model KnjigaAutorCRUD.Models.Knjiga
@{
    ViewData["Title"] = "Brisanje";
}

<h2>Obrisi knjigu</h2>

<form asp-action="Obrisi" method="post">
    <input asp-for="Id" type="hidden"/>
    <input asp-for="Naslov" type="hidden"/>
    <input asp-for="GodinaIzdanja" type="hidden"/>
    <div class="mb-3">
        <label class="form-label" for="Naslov">Naslov</label>
        <input type="text" asp-for="Naslov" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label" for="GodinaIzdanja">Godina Izdanja</label>
        <input type="number" asp-for="GodinaIzdanja" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label" for="Izdavac">Izdavac</label>
        <input type="text" value="@Model.Izdavac.Ime" class="form-control" disabled />
    </div>

    <button type="submit" class="btn btn-danger">Obrisi</button>
    <a class="btn btn-secondary" asp-action="Index">Odustani</a>
</form>